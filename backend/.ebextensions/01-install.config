packages:
  yum:
    nginx: []
    python3-certbot-nginx: []
    certbot: []

files:
  "/etc/nginx/conf.d/elasticbeanstalk-nginx-docker-upstream.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      upstream docker {
          server 127.0.0.1:8080;  # Docker container exposes 8080
      }

commands:
  restart_nginx:
    command: "systemctl enable nginx && systemctl start nginx"
